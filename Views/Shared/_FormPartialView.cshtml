@model ProductoViewModel

<div class="col-md-4">
    <label for="Name" class="form-label">Name</label>
    <input asp-for="Name" type="text" class="form-control" id="Name" required>
    @Html.ValidationMessageFor(x=>x.Name,"",new{@class = "text-danger"})
</div>
<div class="col-md-4">
    <label for="Description" class="form-label">Description</label>
    <input asp-for="Description" type="text" class="form-control" id="Description" required>
    @Html.ValidationMessageFor(x=>x.Description,"",new{@class = "text-danger"})
</div>
<div class="col-md-4">
    <label for="Price" class="form-label">Price</label>
    <input asp-for="Price" type="number" class="form-control" id="Price" required>
    @Html.ValidationMessageFor(x=>x.Price,"",new{@class = "text-danger"})
</div>
<div class="col-md-4">
    <label for="Stock" class="form-label">Stock</label>
    <input asp-for="Stock" type="number" class="form-control" id="Stock" required>
    @Html.ValidationMessageFor(x=>x.Stock,"",new{@class = "text-danger"})
</div>
